<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/patient_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#10156125"
    android:orientation="vertical"
>

  <TextView
        android:id="@+id/title"
        style="@style/AppTheme.PatientDetails.headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Mary Odhiambo"
    />
  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
    >
    <TextView
            android:id="@+id/status"
            style="@style/AppTheme.PatientDetails.body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Status:"
        />
    <TextView
            android:id="@+id/status_value"
            style="@style/AppTheme.PatientDetails.body2"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
        />
  </LinearLayout>
  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
    >
    <TextView
            android:id="@+id/last_contact"
            style="@style/AppTheme.PatientDetails.body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Contacted:"
        />
    <TextView
            android:id="@+id/last_contact_value"
            style="@style/AppTheme.PatientDetails.body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
        />
  </LinearLayout>

  <com.google.android.material.button.MaterialButton
        android:paddingStart="2dp"
        android:drawableStart="@drawable/ic_baseline_add_24"
        android:drawablePadding="2dp"
        android:textAppearance="?attr/textAppearanceBody2"
        android:layout_margin="5dp"
        android:text="@string/complete_survey"
        android:id="@+id/screener"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    />
</LinearLayout>
